<!--Section liste des films-->
<section class="section">
    <div class="container">
        <div class="columns">
          {{#each posts}}
          <div class="column">
            <div class="card">
              <div class="card-image">
                <figure class="image is-4by3">
                  <img src="{{image}}" alt="Placeholder image">
                </figure>
              </div>
              <div class="card-content">
                <div class="content">
                  <a href="/series/{{_id}}"><h2>{{this.title}}</h2></a>                  
                  <p>{{stripTags content}}</p>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
  
        </div>
    </div>
  </section>